<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mediaPlayer">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MP3 Player"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="25dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="22dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:src="@drawable/img"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        android:layout_marginTop="20dp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/cardview1"
        app:layout_constraintStart_toStartOf="@id/cardview1"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dosti Music Video"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"

            />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/play_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview1"
                android:contentDescription="@string/btn_register"
                app:fabSize="mini"
                android:layout_marginTop="15dp"
                android:backgroundTint="#F00707"
                app:tint="@color/white"
                app:srcCompat="@drawable/play_arrow_24dp_e3e3e3_fill1_wght400_grad0_opsz24"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/stop_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/play_music"
                android:layout_marginStart="25dp"
                app:layout_constraintTop_toBottomOf="@id/textview1"
                android:contentDescription="@string/btn_register"
                app:fabSize="mini"
                android:layout_marginTop="15dp"
                android:backgroundTint="#F00707"
                app:tint="@color/white"
                app:srcCompat="@drawable/skip_next_24dp_e3e3e3_fill1_wght400_grad0_opsz24"
                >

            </com.google.android.material.floatingactionbutton.FloatingActionButton>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>